<% if current_user.admin? %>
  <div class="row g-0" style="margin-left: 0px;">
    <div class="col-md-12 ml-12">
      <div class="card shadow-sm p-3 mb-4 w-100 review-card" style="max-width: 800px;">
        <div id="reviews">
          <% if @reviews.any? %>
            <%= render partial: 'reviews/partials/all_reported_reviews', collection: @reviews, as: :review %>
          <% else %>
            <div class="d-flex flex-column align-items-center justify-content-center mt-5 mb-5">
              <h1 class="display-5 text-center mb-5">You have no reported reviews at this time.</h1>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
